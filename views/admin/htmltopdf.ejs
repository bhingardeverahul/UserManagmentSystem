<h1> Users List</h1>
    <table class="table table-info w-100 h-100 text-center table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Mobile</th>
          <th>Image</th>
          <th>Verified</th>
          <th>Actions</th>
        </tr>
      </thead>

      <% if(users.length> 0){
        for(let i=0;i<users.length;i++){ %>
          <tr>
            <td>
              <%= users[i].name %>
            </td>
            <td>
              <%= users[i].email %>
            </td>
            <td>
              <%= users[i].mobile %>
            </td>
            <td> <img src="http://127.0.0.1:3000/userImages/<%= users[i].image %>" alt="<%= users[i].image %>" width="100px" height="100px">
            </td>
            <td>
              <% if(users[i].is_varified==0){ %>
                <p>✔</p>
                <% } else{ %>
                  <p>❌</p>

                  <% } %>
            </td>
            <td>
              <a href="/admin/edit-user?id=<%= users[i]._id %>"><i class="fas fa-edit fa-lg mx-1"></i> Edit</a>
              <a href="/admin/delete-user?id=<%= users[i]._id %>"><i class="fas fa-trash fa-lg "></i> Delete</a>
            </td>
          </tr>
          <% } } else{ %>
            <tr>
              <td colspan="5">Users Not Found</td>
            </tr>
            <% } %>

    </table>